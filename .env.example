# TaskFlow Backend Environment Variables

# Application Environment
APP_ENV=development

# Docker Compose Configuration
# Set to 1 for development to enable hot-reload and auto-install dependencies
INSTALL_DEPS_ON_START=1
API_PORT=8000
DB_PORT=5432
REDIS_PORT=6379
ADMINER_PORT=8080

# Database Configuration
DATABASE_URL=postgresql+psycopg://postgres:postgres@db:5432/taskflow_db

# Redis Configuration (for Celery)
REDIS_URL=redis://redis:6379/0

# JWT Secret Key (CHANGE THIS IN PRODUCTION!)
SECRET_KEY=your-secret-key-change-this-in-production-min-32-chars

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Email Configuration (Resend)
RESEND_API_KEY=your-resend-api-key
RESEND_FROM_EMAIL=noreply@yourdomain.com

# Frontend URL (for email verification links)
FRONTEND_URL=http://localhost:3000

# Sentry Configuration (Optional)
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1

# Testing
TESTING=0

